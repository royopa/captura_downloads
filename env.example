# =============================================================================
# Configuração do Banco de Dados SQL Server
# =============================================================================

# Servidor do banco de dados
DB_SERVER=localhost

# Porta do banco de dados (padrão SQL Server: 1433)
DB_PORT=1433

# Nome do banco de dados
DB_DATABASE=captura_downloads

# Usuário do banco de dados
DB_USER=sa

# Senha do banco de dados
DB_PASSWORD=YourStrongPassword123!

# =============================================================================
# Configurações de API (opcional)
# =============================================================================

# Chave de API da ANBIMA (se necessário)
ANBIMA_API_KEY=your_anbima_api_key_here

# Chave de API da B3 (se necessário)
B3_API_KEY=your_b3_api_key_here

# Chave de API da CVM (se necessário)
CVM_API_KEY=your_cvm_api_key_here

# =============================================================================
# Configurações de Logging
# =============================================================================

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Formato de data para logs
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# =============================================================================
# Configurações de Download
# =============================================================================

# Timeout para downloads (em segundos)
DOWNLOAD_TIMEOUT=30

# Número máximo de tentativas de download
DOWNLOAD_MAX_RETRIES=3

# Delay entre tentativas (em segundos)
DOWNLOAD_RETRY_DELAY=5

# =============================================================================
# Configurações de Processamento
# =============================================================================

# Tamanho do lote para processamento
BATCH_SIZE=1000

# Número máximo de workers para processamento paralelo
MAX_WORKERS=4

# =============================================================================
# Configurações de Sistema
# =============================================================================

# Diretório base para downloads
DOWNLOAD_BASE_PATH=./downloads

# Diretório para arquivos de processamento
BULK_DOWNLOAD_PATH=./downloads_bulk

# Diretório para logs
LOG_PATH=./logs

# =============================================================================
# Configurações de Notificação (opcional)
# =============================================================================

# Email para notificações
NOTIFICATION_EMAIL=admin@example.com

# Webhook do Slack para notificações
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# Configurações de Segurança
# =============================================================================

# Chave secreta para criptografia (gerar uma chave forte)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Verificar certificados SSL (true/false)
VERIFY_SSL=true

# =============================================================================
# Configurações de Desenvolvimento
# =============================================================================

# Modo de desenvolvimento (true/false)
DEBUG=false

# Mostrar informações detalhadas de debug
VERBOSE=false

# =============================================================================
# Configurações de Backup
# =============================================================================

# Habilitar backup automático (true/false)
ENABLE_BACKUP=true

# Diretório para backups
BACKUP_PATH=./backups

# Retenção de backups (em dias)
BACKUP_RETENTION_DAYS=30 